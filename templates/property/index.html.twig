{% extends 'base.html.twig' %}
{% block title %}Nos biens{% endblock %}
{% block body %}
	<!--  FILTER  -->
	<div class="jumbotron">
		<div class="container col-4" id="filter">
			<h4 class="filter">Filtres</h4>
			{{ form_start(form) }}
			<div class="form-row">
				<div class="col-4">
					{{ form_row(form.minSurface) }}
				</div>
				<div class="col-5">
					{{ form_row(form.maxPrice) }}
				</div>
				<div class="col-3">
					<button class="btn btn-primary">Rechercher </button>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>

	<!-- FILTERED RESULTS -->
	<div class="container mt-3">
		<h2>Voici tous nos biens</h2>

			<div class="row">
				{% for property in properties %}
					<div class="col-md-4">
						{% include'property/_property.html.twig' %}
					</div>
				{% endfor %}
			</div>
			<div class="pagination">
				{{ knp_pagination_render(properties) }}
			</div>
	</div>
{% endblock %}