

<div class="card mb-4">
	<div class="card-body">
		<h5 class="card-title">
			<a href="{{  path('property.show', {slug: property.slug, id: property.id}) }}">{{ property.title }}</a>
		</h5>
		<p class="card-text">{{ property.description | nl2br}}</p>
		<p class="card-text">{{ property.postalCode }} {{ property.city }}</p>
		<div class="text-primary" style="font-size: 1.5rem; font-weight: bold">{{ property.price | number_format(0, '', ' ') }} €  <p class="float-right" style="font-weight: normal; font-size: 1.3rem;">{{ property.surface }} m²</p></div>
	</div>
</div>

